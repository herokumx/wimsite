                                <h3 class="form-section">Department Information</h3>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.RoleGUID, new { @class = "control-label" })
                                            @*@Html.DropDownList("GroupGUID", (SelectList)ViewBag.GroupDetails)*@
