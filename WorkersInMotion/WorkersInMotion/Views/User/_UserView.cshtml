@model WorkersInMotion.Model.ViewModel.MarketViewForCreate
@{
    //  Layout = "~/Views/Shared/MasterPage.cshtml";
    Layout = null;
}

<div class="col-md-12">
    <div class="portlet box grey">
        <div class="portlet-title">
            <div class="caption"><i class="icon-group"></i>Choose a Regional Manager Below:</div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover ">
                <tr>
                    <th>

                    </th>
                    <th>
                        Users
                    </th>
                </tr>
                @if (Model.RMUser != null && Model.RMUser.Count() > 0)
                {
                    foreach (var item in Model.RMUser)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @Html.HiddenFor(modelitem => item.OrganizationGUID, new { @id = "hdn_orgguid_" + item.UserGUID })
                                @Html.HiddenFor(modelitem => item.UserGUID, new { @id = "hdn_userguid_" + item.UserGUID })
                                @Html.HiddenFor(modelitem => item.FirstName, new { @id = "hdn_firstname_" + item.UserGUID })
                                @Html.HiddenFor(modelitem => item.LastName, new { @id = "hdn_lastname_" + item.UserGUID })
                                @Html.RadioButton("rdoUser", item.UserGUID, new { @id = "rdo_btn_" + item.UserGUID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" align="center" style="color:red">
                            No Data Found
                        </td>
                    </tr>
                }
            </table>
            <div class="form-actions right">
                <button id="btncancelpicker" type="button" onclick="return pickerCancelRMClick();" class="btn default">Cancel</button>
                <button id="btnrmcontinuepicker" type="submit" onclick="return pickerContinueRMClick();" class="btn blue"><i class="icon-ok"></i> Continue</button>
            </div>
        </div>
    </div>
</div>
