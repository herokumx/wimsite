<body>
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
            <h3 class="page-title">
                Users
            </h3>
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="@Url.Action("DashBoard","User")">Home</a>
                    <i class="icon-angle-right"></i>
                </li>
                <li><a href="#">User</a></li>
            </ul>
            <!-- END PAGE TITLE & BREADCRUMB-->
        </div>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN DASHBOARD STATS -->
    <div class="row">
    </div>
    <!-- END DASHBOARD STATS -->


    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet box grey">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-cog"></i>This page displays the user list of the organization</div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="btn-group">
                            @{
                                if (ViewBag.EnableCreateUserButton != "false")
                                {
                                    <a href="@Url.Action("Create", "User")" class="btn green">
                                        Add New User <i class='icon-plus'></i>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div style="overflow-x:scroll" id="sample_editable_2_wrapper" class="dataTables_wrapper" role="grid">
                            <table class="table table-striped table-hover table-bordered dataTable" id="sample_editable_2" aria-describedby="sample_editable_2_info" style="width: 1065px;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 233px;" aria-label="
                                         First Name
                                    : activate to sort column ascending">
                                            First Name
                                        </th>
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 240px;" aria-label="
                                Last Name
                                    : activate to sort column ascending">
                                            Last Name
                                        </th>
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 240px;" aria-label="
                                        Role
                                    : activate to sort column ascending">
                                            Role
                                        </th>

                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 101px;" aria-label="
                                       Email ID
                                    : activate to sort column ascending">
                                            Email ID
                                        </th>
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 141px;" aria-label="
                                       Mobile Number
                                    : activate to sort column ascending">
                                            Mobile Number
                                        </th>
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 141px;" aria-label="
                                     Region
                                    : activate to sort column ascending">
                                            Region
                                        </th>
                                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="sample_editable_2" rowspan="1" colspan="1" style="width: 141px;" aria-label="
                                       Market
                                    : activate to sort column ascending">
                                            Market
                                        </th>
                                        @if (Session["UserType"] != null && Session["UserType"].ToString() != "WIM_A")
                                        {
                                            <th></th>
                                        }
                                    </tr>
                                </thead>

                                <tbody role="alert" aria-live="polite" aria-relevant="all">
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>
                                                    @Html.HiddenFor(modelItem => item.Id)
                                                    @Html.HiddenFor(modelItem => item.UserGUID)
                                                    @Html.HiddenFor(modelItem => item.SubscriptionGUID)
                                                    @Html.HiddenFor(modelItem => item.IsActive)
                                                    @Html.HiddenFor(modelItem => item.OrganizationSubscriptionGUID)
                                                    @Html.DisplayFor(modelItem => item.FirstName)

                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LastName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserTypeName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.EmailID)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MobilePhone)
                                                </td>


                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RegionName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TerritoryName)
                                                </td>
                                                @if (Session["UserType"] != null && Session["UserType"].ToString() != "WIM_A")
                                                {
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "label label-sm label-info", @style = "border-radius:0px;margin-right:4px" })
                                                        @if (item.UserType != "ENT_A")
                                                        {
                                                            if (item.IsActive)
                                                            {
                                                                @Html.ActionLink("UnSubscribe", "UnSubscribe", new { id = item.SubscriptionGUID }, new { @class = "label label-sm label-default", @style = "border-radius:0px;margin-right:4px", @onclick = "return Unsubscribeconfirm();" })
                                                            }
                                                            else
                                                            {
                                                                @Html.ActionLink("Subscribe", "Subscribe", new { id = item.SubscriptionGUID }, new { @class = "label label-sm label-default", @style = "border-radius:0px;margin-right:4px", @onclick = "return subscribeconfirm();" })
                                                            }
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @id = "delete", @class = "label label-sm label-warning", @style = "border-radius:0px;margin-right:4px", @onclick = "return deleteconfirm();" })

                                                        }

                                                    </td>
                                                }
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="8" align="center" style="color:red">
                                                No Data Found
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                        </div>
                        <div class="row"></div>
                    </div>
                </div>
                <div class="clearfix"></div>

            </div>
            <!-- END PAGE -->
        </div>
    </div>

