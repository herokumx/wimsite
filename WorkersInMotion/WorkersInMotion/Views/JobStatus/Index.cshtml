                                    <span id="JobStatus"></span>

                                    <b class="icon-angle-down"></b>
                                </div>
                            </td>
                            <td style="padding-left:10px">
                                @Html.Raw(@ViewBag.RegionList)
                            </td>
                            @*<td>
                                    From :
                                    <input type="text" id="FromDate" readonly="readonly" style="cursor:pointer" onchange="return datechange();" />
                                </td>
                                <td>
                                    To :
