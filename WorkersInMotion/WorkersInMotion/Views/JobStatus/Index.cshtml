    @if (Model != null && Model.GlobalUsers != null && Model.JobModel != null)
    {
        <div class="row" style="width:50%">
            <div class="col-md-12 col-sm-12">
                <!-- BEGIN PORTLET-->
                <div class="portlet box grey">
                    <div class="portlet-title">
