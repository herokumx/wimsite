@model IEnumerable<WorkersInMotion.Model.ViewModel.AssignModel>

@{
    int i = 0;
    // Layout = null;
    // WorkersInMotion.ViewModel.AssignModel itemLast = Model.Last();
}
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
<head>
    <script src="~/jqueryplugin-dyndatetime-0.2-src/jquery.dynDateTime.js"></script>
    <script src="~/jqueryplugin-dyndatetime-0.2-src/lang/calendar-en.min.js"></script>
    <link href="~/jqueryplugin-dyndatetime-0.2-src/css/calendar-blue.css" rel="stylesheet" />

    <title>Index</title>
    <style type="text/css">
        /*.leftbar-heading {
            font-family: Arial,Verdana, Helvetica, sans-serif;
            font-size: 13px;
            font-style: normal;
            line-height: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
        }*/
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet box grey">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-cog"></i></div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover ">
                        <tr>
                            <th>

                            </th>
                            <th>
                                Job Name
                            </th>
                            <th>
                                Service Start Time
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            i = i + 1;
                            <tr class="odd gradeX">
                                <td>
                                    @Html.CheckBox("chk", true, new { @disabled = "disabled" })
                                </td>
                                <td>
                                    @if (i == Model.Count())
                                    {
                                        <span style="color:blue;font-weight:bold">
                                            @Html.DisplayFor(modelItem => item.JobName)
                                        </span>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.JobName)
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceStartTime)
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                <div class="clearfix"></div>

            </div>
            <!-- END PAGE -->
        </div>
    </div>
    <div>
        <a href="@Url.Action("Index","JobStatus")" class="btn default">Cancel</a>
        <a href="@Url.Action("AssignUser", "AssignJob", new { id = @ViewBag.UserGUID, jobindexguid = @ViewBag.JobIndexGUID })" class="btn red">
            <i class='icon-ok'></i>  Assign
        </a>
    </div>

</body>
</html>
